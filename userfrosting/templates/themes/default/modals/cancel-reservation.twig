<div class="modal fade cancellation-modal-lg" data-backdrop="static" data-keyboard="true" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="row ">
                <div class="col-xs-offset-2 col-xs-10 ">
                    <h1>{{ translate('are_you_sure') }}</h1>
                </div>
            </div>
            <div class="row ">
                <div class="col-xs-offset-1 col-xs-10 ">
                    <p>
                        {{ translate('cancellation_modal_message')['unit'] }} <%=unitId %>
                        {{ translate('cancellation_modal_message')['building'] }} <%=building %>
                        {{ translate('cancellation_modal_message')['company_code'] }} <%=rawabi_code %>
                        {{ translate('cancellation_modal_message')['tabu_code'] }} <%=tapu_code %>
                        {{ translate('cancellation_modal_message')['at'] }} <%=neighborhood %>
                    </p>
                </div>
            </div>


            <div class="row lead">
                <div class="col-xs-offset-2 col-xs-9 ">
                    <div class="pull-right">
                        <button class="btn btn-default" id="cancelReservationBtn" onclick="cancelCancellationModal()">{{ translate('go_back') }}</button>
                        <button class="btn btn-danger save-btn" onclick="continu($('.cancellation-modal-lg').data('parent-unit'))">{{ translate('continue') }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
